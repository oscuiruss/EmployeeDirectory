
create table departments
(
    dep_id integer generated by default as identity
        constraint departments_pkey
            primary key,
    name   varchar(20) not null,
    dir_id integer
        constraint departments_dir___fk
            references employees
);





create table employees
(
    em_id      integer generated by default as identity
        constraint employees_pkey
            primary key,
    name       varchar(20) not null,
    patronymic varchar(20) not null,
    surname    varchar(20) not null,
    email      varchar(20) not null,
    sec_id     integer     not null
        constraint section_ibfk_1
            references sections,
    post       varchar(30) not null
);




create table sections
(
    sec_id integer generated by default as identity
        constraint sections_pkey
            primary key,
    name   varchar(20) not null,
    dep_id integer     not null
        constraint department_ibfk_1
            references departments,
    dir_id integer     not null
        constraint sections_dir___fk
            references employees
);







